.card--teaser.card--teaser-stream.card-with-actionbar
  a.card-image(href="topic.html")
    img.img-responsive(src='content/images/people3-square.jpg', alt='')
  .card-body
    h4.card-title
      a(href="topic.html") Technology for the handicapped
    .text-gray.text-m.text-truncate
      svg.teaser-icon
        use(xlink:href='#icon-account_circle')
      | &nbsp;
      if user == "isAnonymous"
        span Clive Owen
      else
        a(href="other-stream.html") Henry Bond
      | &bullet; 15 feb 2016
    .text-gray.text-m.text-truncate
      svg.teaser-icon
        use(xlink:href='#icon-label')
      | &nbsp;
      span.inline-center Blog
    .card-actionbar
      if user != "isAnonymous"
        .badge.badge-gray-lighter.badge--toggle
          label
            input(type='checkbox')
            svg.icon-badge-toggle
              use(xlink:href='#icon-public')
            span.badge--toggle__label public
      a.btn.btn-flat.btn-sm.pull-right(href="topic.html") Read more

