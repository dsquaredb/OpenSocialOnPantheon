- var user = "isAnonymous"
- var pagetype = "template"
- var page = "Home Anonymous"

doctype html
html(lang="en")
  head
    include layout/_head.pug

  body
    include ../images/icons.svg
    include layout/_gtm.pug
    include layout/_header-an.pug

    main.main-container(role='main')
      .main-content
        .container

          .cover.cover-img.cover-with-canvas(style="background-image: url('content/images/platform-hero.jpg')")
            .cover-wrap
              .row
                .col-xs-12.col-sm-8
                  .hero-canvas.padding-md
                    h1.page-title.h2 Welcome to the XUY community
                    p Cras mattis consectetur purus sit amet fermentum. Duis mollis, est non commodo luctus, nisi erat porttitor ligula, eget lacinia odio sem nec elit.
                    .row.margin-top-l
                      .col-xs-12
                        a.btn.btn-default.btn-raised(href='sign-up.html') Sign up
                        a.btn.btn-primary.btn-raised(href='login.html') Login

          .row.margin-top-xl

            .col-sm-4.col-sm-last
              include ./molecules/_upcoming-events.pug
              include ./molecules/_new-topics.pug

            .col-xs-12.col-sm-8

              ul.stream
                li.stream-item
                  i.stream-icon
                  .card.stream-card
                    .card-body
                      include ./molecules/_stream-activity6.pug
                      //- created an event in a group with no comments

                li.stream-item
                  i.stream-icon
                  .card.stream-card
                    .card-body
                      include ./molecules/_stream-activity7.pug
                      //- created a topic on his profile

                li.stream-item
                  i.stream-icon
                  .card.stream-card
                    .card-body
                      include ./molecules/_stream-activity2.pug
                      //- created post on own profile



    include layout/_footer.pug
    include layout/_scripts.pug
