extends ./layout/base-lu.pug

block title
  title Amsterdam meetup

block breadcrumbs
  li
    a(href='home-lu.html') Home
  li
    a(href='group-stream.html') Happy campers
  li.active Amsterdam Meetup

block pagetitle
  
  .container.hero-container
    .cover.cover-img.cover-img-gradient.hidden-xs(style="background-image: url('content/images/event-hero.jpg')")  
      .hero-action-button
        a.waves-effect.waves-circle.btn.btn-default.btn-floating(href='node-edit-event.html')
          svg.icon-gray.icon-medium
            use(xlink:href='#icon-edit')     
      .cover-wrap
        h1.page-title Amsterdam Meetup
        .hero-footer
          .row.row-md-center
            .col-xs-12.col-md-6.col-md-offset-3
              .badge.badge--toggle
                label
                  input(type='checkbox')
                  svg.icon-white.icon-badge-toggle
                    use(xlink:href='#icon-community')
                  span.badge--toggle__label community
              div
                time.eventdate.updated June 6 2016 - 12:00 
                span @ Keizersgracht 376, Amsterdam
              div(itemprop="author", itemscope="", itemtype="http://schema.org/Person") 
                span By 
                a(itemprop="url", rel="author", href="my-stream.html") John Johnson 
                span
                  | in group 
                  a(itemprop="organizer", href="group-stream.html") Happy Campers
            .col-xs-12.col-md-3
              .btn-group
                button.btn.btn-accent.btn-lg.btn-raised.dropdown-toggle(type="button", autocomplete="off", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Enrolled        
                  span.caret
                ul.dropdown-menu
                  li
                    a(href="#") Cancel enrollment 
    
  .container  
    .visible-xs-block.section
      a.btn.btn-raised.btn-user(href="event.html")
        svg.btn-icon
          use(xlink:href='#icon-navigate_before')  
        | Back to event

  .container.hero-container  
    .brand-secondary.z-depth-1.hidden-xs
      nav(role="navigation" aria-label="Tabs")
        h2.visually-hidden Secondary navigation
        ul.nav.nav-tabs.tabs-center.brand-secondary.nav-tabs--xl
          li
            a(href='event.html') Details
          li.active
            a(href="event-enrollments.html") Enrollments
              span.visually-hidden (active tab)
      
block content
      
  .row.margin-top-l
    .col-sm-12
      h4.section-title Event enrollments
    
    .col-sm-8
      include molecules/_member1.pug
      include molecules/_member2.pug
      include molecules/_member3.pug
      include molecules/_member4.pug
      include molecules/_member5.pug
